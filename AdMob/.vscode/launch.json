{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Android Build, Deploy & Run",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "run", "--project", "AdMob.Android.csproj", "-c", "Debug", "-f", "net8.0-android"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "preLaunchTask": "build-android",
        }
    ]
}