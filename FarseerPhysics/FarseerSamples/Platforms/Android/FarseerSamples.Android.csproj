<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-android</TargetFramework>
    <OutputType>Exe</OutputType>
    <RootNamespace>FarseerSamples</RootNamespace>
    <AssemblyName>FarseerSamples</AssemblyName>
    <AndroidApplication>true</AndroidApplication>
    <AndroidResgenFile>Resources\Resource.Designer.cs</AndroidResgenFile>
    <AndroidResgenClass>Resource</AndroidResgenClass>
    <AndroidManifest>Properties\AndroidManifest.xml</AndroidManifest>
    <MonoAndroidResourcePrefix>Resources</MonoAndroidResourcePrefix>
    <MonoAndroidAssetsPrefix>Assets</MonoAndroidAssetsPrefix>
    <AndroidUseLatestPlatformSdk>False</AndroidUseLatestPlatformSdk>
    <AndroidSdkDirectory Condition="'$(AndroidSdkDirectory)' == ''">$(ProgramFiles)\Android\android-sdk</AndroidSdkDirectory>
    <JavaMaximumHeapSize>1G</JavaMaximumHeapSize>
    <SupportedOSPlatformVersion>28</SupportedOSPlatformVersion>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>FarseerSamples.Android</PackageId>
    <Title>Farseer Physics Samples - Android</Title>
    <Product>FarseerSamples</Product>
    <Description>Farseer Physics Engine samples for MonoGame Android</Description>
    <Company>Farseer Physics</Company>
    <Copyright>Copyright Â© Farseer Physics 2023</Copyright>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.Android" Version="3.8.*" />
    <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\FarseerSamples.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\Core\Content\**\*.xnb" Link="Content\%(RecursiveDir)%(Filename)%(Extension)">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
