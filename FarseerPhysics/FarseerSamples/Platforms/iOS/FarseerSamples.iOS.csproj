<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-ios</TargetFramework>
    <OutputType>Exe</OutputType>
    <RootNamespace>FarseerSamples</RootNamespace>
    <AssemblyName>FarseerSamples</AssemblyName>
    <RuntimeIdentifier>ios-arm64</RuntimeIdentifier>
    <SupportedOSPlatformVersion>10.0</SupportedOSPlatformVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>FarseerSamples.iOS</PackageId>
    <Title>Farseer Physics Samples - iOS</Title>
    <Product>FarseerSamples</Product>
    <Description>Farseer Physics Engine samples for MonoGame iOS</Description>
    <Company>Farseer Physics</Company>
    <Copyright>Copyright Â© Farseer Physics 2023</Copyright>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.iOS" Version="3.8.*" />
    <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\FarseerSamples.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\Core\Content\**\*.xnb" Link="Content\%(RecursiveDir)%(Filename)%(Extension)">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
