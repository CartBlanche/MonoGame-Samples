      "group": "build"
    },
    {
      "label": "Build DesktopGL",
      "type": "shell",
      "command": "dotnet build Platforms/Desktop/ShadowMapping.DesktopGL.csproj",
      "group": "build"
    },
    {
      "label": "Build Android",
      "type": "shell",
      "command": "dotnet build Platforms/Android/ShadowMapping.Android.csproj",
