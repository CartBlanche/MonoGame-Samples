{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-windows",
			"type": "shell",
			"command": "dotnet build Platforms/Windows/BloomSample.Windows.csproj",
			"group": "build",
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build-desktopgl",
			"type": "shell",
			"command": "dotnet build Platforms/DesktopGL/BloomSample.DesktopGL.csproj",
			"group": "build",
			"problemMatcher": "$msCompile"
		},
		{
			"label": "run-windows",
			"type": "shell",
			"command": "dotnet run --project Platforms/Windows/BloomSample.Windows.csproj",
			"group": "test",
			"problemMatcher": "$msCompile"
		},
		{
			"label": "run-desktopgl",
			"type": "shell",
			"command": "dotnet run --project Platforms/DesktopGL/BloomSample.DesktopGL.csproj",
			"group": "test",
			"problemMatcher": "$msCompile"
		}
	]
}